[Unit]
Description=Prometheus elasticsearch-exporter in Docker
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker start -a {{ elasticsearch_exporter_service }}
ExecStop=/usr/bin/docker stop -t 15 {{ elasticsearch_exporter_service }}
Restart={{ elasticsearch_exporter_restart }}
RestartSec={{ elasticsearch_exporter_restart_sec }}

[Install]
WantedBy=multi-user.target
